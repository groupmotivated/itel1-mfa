<!-- Main content with responsive spacing -->
<div class="p-3 p-lg-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <!-- Page header -->
                <div class="flex justify-content-between align-items-center mb-4">
                    <h1 class="h2 mb-0"><%= title %></h1>
                    <div class="text-muted small">
                        Welcome back, <%= user.name %>!
                    </div>
                </div>

                <!-- Welcome card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8">
                                <h5 class="card-title text-primary mb-3">
                                    <i class="bi bi-house-door me-2"></i>
                                    Dashboard Overview
                                </h5>
                                <p class="card-text text-muted">
                                    Here's what's happening with your account today.
                                </p>
                            </div>
                            <div class="col-lg-4 text-center text-lg-end">
                                <div class="mt-3 mt-lg-0">
                                    <span class="badge bg-primary fs-6 px-3 py-2">
                                        <%= user.items.length %> Items
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Items section -->
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h6 class="card-title mb-0">
                            <i class="bi bi-list-check me-2"></i>
                            Your Items
                        </h6>
                    </div>
                    <div class="card-body">
                        <% if (user.items && user.items.length > 0) { %>
                            <div class="row g-3">
                                <% user.items.forEach(function(item, index) { %>
                                    <div class="col-md-6 col-lg-4">
                                        <div class="card h-100 border-0 bg-light">
                                            <div class="card-body text-center">
                                                <div class="bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <span class="fw-bold"><%= index + 1 %></span>
                                                </div>
                                                <h6 class="card-title mt-2 mb-0"><%= item %></h6>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                                <p class="text-muted mt-2">No items to display</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>